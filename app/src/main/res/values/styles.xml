<resources>

    <style name="M3CardView" parent="Theme.Material3.Light.NoActionBar">
        ...
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Toolbar.SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/montserrattext</item>
    </style>

    <style name="TextAppearance.BottomNavigationView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/montserrattext</item>
    </style>

    <style name="TextAppearance.App.Default" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
